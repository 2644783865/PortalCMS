@model Portal.CMS.Web.Areas.Admin.ViewModels.Authentication.BioViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("Bio", "Authentication", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationMessage("Bio")
    <div class="control-group control-textarea float-container">
        @Html.LabelFor(x => x.Bio)
        @Html.TextAreaFor(x => x.Bio, new { placeholder = "Describe yourself" })
    </div>

    <div class="button-group float-container">
        <button class="btn primary">Save</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
}
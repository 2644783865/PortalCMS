@model Portal.CMS.Web.Areas.Admin.ViewModels.Pages.CreateViewModel
@{
    Layout = "";

    var postCategoryList = Model.PostCategories.Select(x => new SelectListItem { Value = x.MenuId.ToString(), Text = x.MenuName });
}

@using (Html.BeginForm("Create", "Pages", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationMessage("PageName")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.PageName)
        @Html.TextBoxFor(x => x.PageName, new { placeholder = "Page Name" })
    </div>

    @Html.ValidationMessage("PageArea")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.PageArea)
        @Html.TextBoxFor(x => x.PageArea, new { placeholder = "Page Area" })
    </div>

    @Html.ValidationMessage("PageController")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.PageController)
        @Html.TextBoxFor(x => x.PageController, new { placeholder = "Page Controller" })
    </div>

    @Html.ValidationMessage("PageAction")
    <div class="control-group float-container">
        @Html.LabelFor(x => x.PageAction)
        @Html.TextBoxFor(x => x.PageAction, new { placeholder = "Page Action" })
    </div>

    <br />

    <div class="footer">
        <button class="btn primary">Create Page</button>
        <button class="btn" data-dismiss="modal">Cancel</button>
    </div>
}
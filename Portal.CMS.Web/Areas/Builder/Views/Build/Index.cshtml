@model Portal.CMS.Web.Areas.Builder.ViewModels.Build.CustomViewModel
@using Portal.CMS.Web.Architecture.Helpers;
@{
    ViewBag.Title = Model.Page.PageName;

    var isAdmin = UserHelper.IsAdmin;
}

@section HEADScripts
{
    @if (isAdmin)
    {
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
        @Scripts.Render("~/Resources/JavaScript/JQueryTouch")
    }

    @Scripts.Render("~/Resources/JavaScript/PageBuilderAdministration")
    @Scripts.Render("~/Resources/JavaScript/FAQSpoilerEvents")

    <script type="text/javascript">
        var dataParams = { "pageId": @Model.Page.PageId, "referrer": "@Request.UrlReferrer", "__RequestVerificationToken": $('input[name=__RequestVerificationToken]').val() };
        $.ajax({data: dataParams,type: 'POST',cache: false,url: '@Url.Action("Analytic", "Build", new { area = "Builder" })',success: function (data) {},});
    </script>
}

@if (isAdmin)
{
    <div class="page-admin-wrapper admin-wrapper">
        <div class="button add" data-toggle="popover" data-placement="top" data-trigger="click" data-container="body"><span class="fa fa-plus-circle"></span>Add</div>
        <div class="button options" data-toggle="popover" data-placement="top" data-trigger="click" data-container="body"><span class="fa fa-cog"></span><span class="hidden-xs">Page </span>Options</div>
        <div class="button more" data-toggle="popover" data-placement="top" data-trigger="click" data-container="body"><span class="fa fa-suitcase"></span>More<span class="hidden-xs"> Content</span></div>

        <div id="popover-add" class="list-group" style="display: none;">
            <div class="popover-menu">
                <a class="list-group-item" onclick="TogglePanel('section-panel');"><span class="fa fa-plus"></span>Add Section</a>
                <a class="list-group-item" onclick="TogglePanel('component-panel');"><span class="fa fa-plus"></span>Add Component</a>
                <a class="list-group-item launch-modal" href="@Url.Action("UploadImage", "MediaManager", new { area = "Admin" })" data-title="Upload Image"><span class="fa fa-image"></span>Upload Image</a>
                <a class="list-group-item launch-modal" href="@Url.Action("Create", "BlogManager", new { area = "Admin" })" data-title="Write Blog Post"><span class="fa fa-rss"></span>Write Blog Post</a>
            </div>
        </div>
        <div id="popover-options" class="list-group" style="display: none;">
            <div class="popover-menu">
                <a class="list-group-item launch-modal" href="@Url.Action("Edit", "PageManager", new { pageId = @Model.Page.PageId, area = "Admin" })"><span class="fa fa-pencil"></span>Edit Page</a>
                <a class="list-group-item" onclick="ChangeOrder();"><span class="fa fa-sort"></span>Change Section Order</a>
            </div>
        </div>
        <div id="popover-more" class="list-group" style="display: none;">
            <div class="popover-menu">
                <a class="list-group-item" onclick="TogglePanel('pages-panel');"><span class="fa fa-list"></span>Page Manager</a>
                <a class="list-group-item" onclick="TogglePanel('blog-manager-panel');"><span class="fa fa-rss"></span>Blog Manager</a>
                <a class="list-group-item" onclick="TogglePanel('theme-manager-panel');"><span class="fa fa-paint-brush"></span>Theme Manager</a>
            </div>
        </div>
    </div>

    <div class="action-container section-order" style="display: none;">
        <div onclick="SaveOrder();" class="action"><span class="fa fa-check"></span></div>
        <div onclick="location.reload();" class="action"><span class="fa fa-remove"></span></div>
    </div>

    using (Html.BeginForm("Order", "Build", FormMethod.Post, new { @style = "display: none;" }))
    {
        <input id="order-list" name="sectionList" />
        <input id="order-pageId" value="@Model.Page.PageId" name="pageId" />
        <button id="order-submit"></button>
    }
}

<div id="page-wrapper" class="@(isAdmin ? "admin" : "visitor" )">
    @foreach (var section in Model.Page.PageSections.OrderBy(x => x.PageSectionOrder).ThenBy(x => x.PageSectionId))
            {
        <div id="section-wrapper-@(section.PageSectionId)" class="section-wrapper@(isAdmin ? " admin sortable" : "" )" data-section="@(section.PageSectionId)">
            @Html.Raw(section.PageSectionBody)
        </div>
    }
</div>

@if (isAdmin)
{
    @Html.Action("Add", "Section", new { @pageId = Model.Page.PageId })
    @Html.Action("Add", "Component")
    @Html.Action("AppDrawer", "PageManager", new { area = "Admin" })
    @Html.Action("AppDrawer", "ThemeManager", new { area = "Admin" })
    @Html.Action("AppDrawer", "BlogManager", new { area = "Admin" })
}
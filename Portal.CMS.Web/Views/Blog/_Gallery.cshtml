@model Portal.CMS.Entities.Entities.Posts.Post
@using Portal.CMS.Entities.Entities.Posts;

<div class="row image-container x3">
    @if (!Model.PostImages.Any(x => x.PostImageType == PostImageType.Gallery))
    {
        @Html.Action("Get", "Copy", new { area = "Admin", copyName = "No Gallery Message" })
    }

    @foreach (var image in Model.PostImages.Where(x => x.PostImageType == PostImageType.Gallery))
    {
        <a class="fancybox-thumb" rel="fancybox-thumb" href="@image.Image.ImagePath" title="@Model.PostTitle"><img class="thumbnail" src="@image.Image.ImagePath" alt="Gallery Image" /></a>
    }
</div>